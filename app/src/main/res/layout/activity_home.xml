<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDate"
        style="@style/new_year_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_200"
        android:layout_marginBottom="@dimen/d_50"
        android:layout_centerHorizontal="true"
        android:textColor="#E91E63"
        android:includeFontPadding="false"
        android:textSize="@dimen/d_40"
        tools:ignore="SpUsage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtLunarDate"
        style="@style/new_year_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_200"
        android:layout_marginBottom="@dimen/d_50"
        android:layout_centerHorizontal="true"
        android:textColor="#E91E63"
        android:includeFontPadding="false"
        android:textSize="@dimen/d_40"
        tools:ignore="SpUsage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtName"
        style="@style/semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Zinhh"
        android:layout_below="@id/txtDate"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/d_30"
        tools:ignore="SpUsage" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btnInputData"
        style="@style/semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:background="@color/colorAppBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/font_large_fit"
        android:textColor="@color/colorWhite"
        android:paddingVertical="@dimen/small_margin"
        android:paddingHorizontal="@dimen/d_15"
        android:text="Nhập số tiền lì xì"
        tools:ignore="SpUsage" />




</RelativeLayout>